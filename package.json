  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/gtag.js": "^0.0.10",
    "@types/node": "17.0.23",
    "@types/react": "18.0.3",
    "@types/react-dom": "18.0.0",
    "babel-plugin-import": "^1.13.5",
    "eslint": "8.13.0",
    "eslint-config-next": "12.1.5",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "2.6.2",
    "typescript": "4.6.3"
  },
  "lint-staged": {
    "**/*": "yarn format"
  }
}
