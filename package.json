{
  "name": "toon-site",
  "description": "Toon's personal website",
  "version": "0.6.0",
  "private": true,
  "scripts": {
    "dev": "PORT=3100 NEXT_PUBLIC_VERSION=$npm_package_version next dev",
    "build": "ANALYZE=false NEXT_PUBLIC_VERSION=$npm_package_version next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "format": "prettier --write --ignore-unknown '**/*.{js,jsx,ts,tsx,css,md,json}'",
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@next/bundle-analyzer": "^12.1.6",
    "antd": "^4.20.1",
    "axios": "^0.27.2",
    "change-case": "^4.1.2",
    "dayjs": "^1.11.1",
    "glob": "^8.0.2",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.5.1",
    "next": "12.1.5",
    "next-compose-plugins": "^2.2.1",
    "next-mdx-remote": "^4.0.3",
    "next-plugin-antd-less": "^1.8.0",
    "next-seo": "^5.4.0",
    "next-sitemap": "^2.5.20",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-highlight": "^5.0.2",
    "rehype-slug": "^5.0.1",
    "rss-to-json": "^2.0.2",
    "sharp": "^0.30.4"
